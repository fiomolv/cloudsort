<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
    <property name="hibernateProperties">
      <props>
        <prop key="hibernate.hbm2ddl.auto">create</prop>
        <prop key="hibernate.connection.pool_size">1</prop>
        <prop key="hibernate.show_sql">true</prop>
        <prop key="hibernate.connection.autocommit">true</prop>

        <!--MYSQL-->
        <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
        <prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
        <prop key="hibernate.connection.url">jdbc:mysql://localhost/mturk</prop>
        <prop key="hibernate.connection.username">root</prop>
        <prop key="hibernate.connection.password"></prop>

      </props>
    </property>
    <property name="annotatedClasses">
      <list>
        <value>com.satera.cloudsort.entity.Response</value>
        <value>com.satera.cloudsort.entity.Request</value>
        <value>com.satera.cloudsort.entity.Product</value>
        <value>com.satera.cloudsort.entity.Category</value>
      </list>
    </property>
  </bean>

  <bean id="hibernateInterceptor" class="org.springframework.orm.hibernate3.HibernateInterceptor" autowire="byName" /><!--sessionFactory will get autowired-->

  <bean id="turkDaoTarget" class="com.satera.cloudsort.dao.TurkDAOHibernateImpl" autowire="byName" /><!--sessionFactory will get autowired-->
  <bean id="HITManager" class="com.satera.cloudsort.service.HITManager" autowire="byName" />
  
  <bean id="turkDAO" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="proxyInterfaces">
      <value>com.satera.cloudsort.dao.TurkDAO</value>
    </property>
    <property name="interceptorNames">
      <list>
        <value>hibernateInterceptor</value>
        <value>turkDaoTarget</value>
      </list>
    </property>
  </bean>
  
  <bean id="categoryLoader" class="com.satera.cloudsort.service.CategoryLoader" autowire="byName" />
  <bean id="ingestor" class="com.satera.cloudsort.Ingestor" autowire="byName" />

</beans>